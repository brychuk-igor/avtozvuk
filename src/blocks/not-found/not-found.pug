//- Все примеси в этом файле должны начинаться c имени блока (not-found)

mixin not-found(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +not-found('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' not-found--' + modsList[i].trim();
      }
    }

  .not-found(class=allMods)&attributes(attributes)
    .not-found__inner
      block

