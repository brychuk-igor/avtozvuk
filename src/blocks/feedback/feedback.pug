//- Все примеси в этом файле должны начинаться c имени блока (feedback)

mixin feedback(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +feedback('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' feedback--' + modsList[i].trim();
      }
    }

  .feedback(class=allMods)&attributes(attributes)
    .feedback__inner
      block
